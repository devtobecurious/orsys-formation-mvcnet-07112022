@model LoginViewModel

<div class="row">
    <form method="post" class="col s12">
        <div class="row">
            <div class="input-field col s3">
                <input placeholder="Login" asp-for="Login" id="log" class="validate">
                <span asp-validation-for="Login" ></span>
                <label for="log">Login</label>
            </div>
            <div class="input-field col s3">
                <input placeholder="Login" id="log" name="login" type="checkbox" class="validate">
                <label for="log">Login</label>
            </div>
            <div class="input-field col s6">
                <input id="pass" asp-for="Password" class="validate">
                <label for="pass">Mot de passe</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s3"></div>
            <div class="input-field col s6">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Se connecter
                    <i class="material-icons right">send</i>
                </button>
            </div>
            <div class="input-field col s3"></div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}